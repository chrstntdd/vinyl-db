doctype html

html(lang='en')
  include includes/head.pug
  body
    include includes/nav.pug
    main
      article#edit-details-card
        h1 Edit Album Details
        section#record-details
          form(action='/records' method='POST' autocomplete='off')
            //- HIDDEN INPUTS ARE NEEDED TO PASS DATA TO SERVER FROM API RESPONSE
            input(name='discogsId' type='hidden')
            input(name='thumb' type='hidden')
            img(src='')
            .input-group
              input.m-input(name='artist', type='text')
              label(for='artist' type='text') Artist
            .input-group
              input.m-input(name='album', type='text')
              label(for='album' type='text') Album
            .input-group
              input.m-input(name='releaseYear', type='number')
              label(for='releaseYear' type='text') Release Year
            .input-group
              input.m-input(name='genre', type='text')
              label(for='genre' type='text') Genre
            .input-group
              input.m-input(name='rating', type='number')
              label(for='rating' type='text') Rating
            .input-group
              button(type='submit') Update details

    script(src='https://code.jquery.com/jquery-3.2.1.min.js' integrity='sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=' crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.4/lodash.js')
    script(src='/scripts/jq-serialize-obj.js')
    script(src='/scripts/collection-edit.js')
    script(src='/scripts/input.js')
    script(src='/scripts/nav.js')
