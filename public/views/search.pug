doctype html

html(lang='en')
  include includes/head.pug
  body
    include includes/nav.pug
    main
      article#search-card
        h1 Search
        form#search-form(autocomplete='off')
          .input-group
            input#search-artist.m-input(name='artist', type='text')
            label(for='artist' type='text') Artist
          .input-group
            input#search-album.m-input(name='album', type='text')
            label(for='album' type='text') Album
          .input-group
            button#search-btn(type='submit') Search
      //- a#custom-btn(href='/search/details'): button Create Custom
      section: ul#results

    script(src='https://code.jquery.com/jquery-3.2.1.min.js' integrity='sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=' crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.4/lodash.js')
    script(src='/scripts/input.js')
    script(src='/scripts/app.js')
    script(src='/scripts/nav.js')
