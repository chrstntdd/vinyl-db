doctype html

html(lang='en')
  include includes/head.pug
  body
    include includes/nav.pug
    main
      article#result-card
        h1 Is this what you were looking for?
        .vinyl
          .info
            .info__artist= artist
            .info__album= album
            .info__year= year
            .info__genre= genre
          .vinyl__cover(style='background: url("'+ thumb +'") no-repeat center/cover')
        .btn-group
          a(href='/search/details'): button.confirm That's right
          a(href='/search'): button.deny Try again...

    script(src='https://code.jquery.com/jquery-3.2.1.min.js' integrity='sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=' crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.4/lodash.js')
    script(src='/scripts/app.js')
    script(src='/scripts/nav.js')
