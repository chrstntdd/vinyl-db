doctype html

html(lang='en')
  include includes/head.pug
  body
    main
      article#login-card
        .module.form-module
          .toggle
            .choice.on Sign in
            .choice Sign up

          .form
            h2 Sign in to your account
            form(action='/login' method='POST', autocomplete='off')
              .input-group
                input.m-input(name='email' required)
                label(for='email' type='text') Email
              .input-group
                input.m-input(name='password', type='password' required)
                label(for='password' type='text') Password
              .input-group
                button(type='submit') Login
                a.forgot(href='/forgot') Forgot password?
              .demo-acct
                p Demo credentials
                p email: 
                  span test@test.com
                p password: 
                  span securepassword
          .form
            h2 Create an account
            form(action='/signup' method='POST', autocomplete='off')
              .input-group
                input.m-input(name='email', type='email' required)
                label(for='email' type='text') Email
              .input-group
                input.m-input(name='password', type='password' required)
                label(for='password' type='text') Password
              .input-group
                input.m-input(name='confirmPassword', type='password' required)
                label(for='confirmPassword' type='text') Confirm Password
              .input-group
                button(type='submit') Create Account
          if signupMessage != ''
            each msg in signupMessage
              .flash-msg.flash-info= msg
          if loginMessage != ''
            each msg in loginMessage
              .flash-msg.flash-info= msg

    script(src='https://code.jquery.com/jquery-3.2.1.min.js' integrity='sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=' crossorigin='anonymous')
    script(src='/scripts/input.js')
    script(src='/scripts/nav.js')